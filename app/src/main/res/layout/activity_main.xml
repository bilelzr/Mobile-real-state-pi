<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/bg_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView_shopping"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                 />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="27sp"
                android:text="Shop Now"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="5"
                android:columnCount="2"
                android:background="@drawable/customebackgrund"
                android:backgroundTint="#7ACEF4"
                android:padding="0dp"
                android:layout_marginTop="20dp">



                <androidx.cardview.widget.CardView
                    android:id="@+id/house_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@color/bg_card"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="30dp"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/house"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/tv_house_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="House"
                            android:textSize="20dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/text_cards_color"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/villa_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@color/bg_card"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="30dp"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/villa"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/tv_villa_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Villa"
                            android:textSize="20dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/text_cards_color"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/apartment_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@color/bg_card"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="30dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/apartments"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/tv_apartment_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apartment"
                            android:textSize="20dp"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_cards_color"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/firma_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="30dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/bg_card"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/farm"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/tv_firma_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Firma"
                            android:textSize="20dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/text_cards_color"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>












            </GridLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>