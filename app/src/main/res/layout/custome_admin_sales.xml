<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#ECECEC"
    android:orientation="horizontal"
    android:paddingStart="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/img_property_appointment"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:src="@drawable/teshert" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_marginStart="10dp"
        android:background="#ECECEC"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ECECEC"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="120sp"
                android:src="@drawable/delete" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ECECEC"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_type_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="@color/black"
            android:textSize="20dp" />

            <ImageView
                android:id="@+id/img_accept"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="120sp"
                android:src="@drawable/correct" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_date_appointment_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date "
            android:textColor="@color/black"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/tv_payement_sales_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payement Type "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_commission_sales_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commision "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_status_sales_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status "
            android:textColor="@color/black"
            android:textSize="20dp" />


    </LinearLayout>


</LinearLayout>