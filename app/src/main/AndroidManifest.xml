<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.RealEstateApp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@drawable/house_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShoppingApp">
        <activity
            android:name="com.example.RealEstateApp.SettingActivity"
            android:exported="false"
            android:parentActivityName="com.example.RealEstateApp.HomeActivity" />
        <activity
            android:name="com.example.RealEstateApp.HomeActivity"
            android:exported="true" />
        <activity
            android:name="com.example.RealEstateApp.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.RealEstateApp.AppointmentActivity"
            android:exported="true"
            android:parentActivityName="com.example.RealEstateApp.HomeActivity" />
        <activity
            android:name="com.example.RealEstateApp.ProfileActivity"
            android:exported="true"
            android:parentActivityName="com.example.RealEstateApp.HomeActivity" />
        <activity
            android:name="com.example.RealEstateApp.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.example.RealEstateApp.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.example.RealEstateApp.PropertyCardActivity"
            android:exported="false"
            android:parentActivityName="com.example.RealEstateApp.MainActivity" />
        <activity
            android:name="com.example.RealEstateApp.DisplayPropertyActivity"
            android:exported="false" />
        <activity
            android:name="com.example.RealEstateApp.MainActivity"
            android:exported="true"
            android:parentActivityName="com.example.RealEstateApp.HomeActivity" />
    </application>

</manifest>